@import "~startbootstrap-sb-admin-2/vendor/fontawesome-free/css/all.css"
@import "~normalize.css/normalize.css"
@import "~bootstrap/dist/css/bootstrap.css"
@import '~select2/dist/css/select2.css'
@import "~@ttskch/select2-bootstrap4-theme/dist/select2-bootstrap4.css"

@font-face
  font-family DalaFloda
  src url("./font/DalaFloda-Medium_0.otf")

@font-face
  font-family WorkSansRegular
  src url('./font/WorkSans-Regular.ttf')

@font-face
  font-family WorkSansSemiBold
  src url("./font/WorkSans-SemiBold.ttf")

body
  font-family WorkSansRegular

#content
  background url("./img/4k-response.jpg") no-repeat center center fixed;
  background-size cover !important
  position fixed
  top 0
  left 0
  width 100%
  height 100%

.logo
  width 150px

.wrapper
  margin-top 18%

.font-semi-bold
  font-family WorkSansSemiBold

.font-dala
  font-family DalaFloda

.brand-name
  width 30%

.font-size-13
  font-size 3rem

.font-size-22
  font-size 4.2rem

.button
  padding 10px 15px
  border 1px solid #FFFFFF
  color #FFFFFF

.button:hover
  background-color #FFFFFF
  color #000
  text-decoration none
  transition all 0.8s ease

#wrapper
  display: flex;
  flex-direction: column;
  min-height: calc(100% - 200px);
  justify-content: space-between;

.contact-wrapper
  margin-bottom 2%

.contact:after
  content: "";
  display: block
  margin: 0 auto;
  width: 3%;
  padding-top: 15px;
  border-bottom: 1px solid white;

