@font-face
  font-family WorkSansRegular
  src url('./font/WorkSans-Regular.ttf')

@font-face
  font-family WorkSansSemiBold
  src url("./font/WorkSans-SemiBold.ttf")

body
  font-family WorkSansRegular

//-----------------COVER--------------------
/*
* Globals
*/

/* Links */
a,
a:focus,
a:hover {
  color: #fff;
}

/*
 * Base structure
 */

html,
body {
  height: 100%;
}

body {
  display: -ms-flexbox;
  display: flex;
  color: #fff;
}

/*
 * Header
 */
.masthead {
  margin-bottom: 2rem;
}

.masthead-brand {
  margin-bottom: 0;
}

@media (min-width: 48em) {
  .masthead-brand {
    float: left !important;
  }
}

/*
 * Cover
 */
.cover {
  padding: 0 1.5rem;
}

/*
 * Footer
 */
.mastfoot {
  color: rgba(255, 255, 255, .5);
}

//________________________________________

#content
  background url("./img/4k-response.jpg") no-repeat center center fixed;
  background-size cover !important

.logo
  width 320px

.lead
  font-size 3rem

.font-semi-bold
  font-family WorkSansSemiBold

.font-dala
  font-family DalaFloda

.brand-name
  width 64%

.font-size-22
  font-size 5.2rem

.button
  padding 10px 15px
  border 1px solid #FFFFFF
  color #FFFFFF

.button:hover
  background-color #FFFFFF
  color #000
  text-decoration none
  transition all 0.8s ease

.contact:after
  content: "";
  display: block
  margin: 0 auto;
  width: 3%;
  padding-top: 10px;
  border-bottom: 1px solid white;

